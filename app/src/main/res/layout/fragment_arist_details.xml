<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
<RelativeLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">

  <TextView
    android:id="@+id/tv_artist_details_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    tools:text="TextView"/>
  <ImageView
    android:id="@+id/image_view_artist_details"
    android:layout_width="320dp"
    android:layout_height="320dp"
    android:layout_below="@+id/tv_artist_details_title"
    android:layout_marginTop="16dp"
    android:padding="8dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>
  <TextView
    android:id="@+id/tv_artist_details_biography_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:textStyle="bold"
    android:layout_below="@+id/image_view_artist_details"
    android:text="@string/artist_biographi"/>
  <TextView
    android:id="@+id/tv_artist_details_biography"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_below="@+id/tv_artist_details_biography_title"
    tools:text=" asdfa sdf asdf asdf asdf asdf asdf asdf /n asdf asdf asdf asdf "/>
  <FrameLayout
    android:id="@+id/fr_layout_artist_detail"
    android:background="@color/colorWhite"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>
  </FrameLayout>
</RelativeLayout>
</ScrollView>